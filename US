    <h1>Been Together For</h1>

    <div class="timer">
        <div class="time-box"><div class="number" id="years">00</div><div class="label">YEARS</div></div>
        <div class="time-box"><div class="number" id="months">00</div><div class="label">MONTHS</div></div>
        <div class="time-box"><div class="number" id="days">00</div><div class="label">DAYS</div></div>
        <div class="time-box"><div class="number" id="hours">00</div><div class="label">HOURS</div></div>
        <div class="time-box"><div class="number" id="minutes">00</div><div class="label">MINUTES</div></div>
        <div class="time-box"><div class="number" id="seconds">00</div><div class="label">SECONDS</div></div>
    </div>
</div>

<script>
    const relationshipStart = new Date("November 1, 2025 00:00:00");

    const adenBirth = new Date("September 17, 2008");
    const paisleyBirth = new Date("January 20, 2010");

    function calculateAge(birthDate) {
        const today = new Date();
        let age = today.getFullYear() - birthDate.getFullYear();
        const m = today.getMonth() - birthDate.getMonth();
        if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) age--;
        return age;
    }

    function birthdayCountdown(birthDate) {
        const today = new Date();
        let next = new Date(today.getFullYear(), birthDate.getMonth(), birthDate.getDate());
        if (next < today) next.setFullYear(next.getFullYear() + 1);
        const diff = next - today;
        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
        return `Next birthday in ${days} days`;
    }

    function updateRelationship() {
        const now = new Date();
        let diff = now - relationshipStart;
        if (diff < 0) diff = 0;

        const seconds = Math.floor(diff / 1000) % 60;
        const minutes = Math.floor(diff / (1000 * 60)) % 60;
        const hours = Math.floor(diff / (1000 * 60 * 60)) % 24;
        const daysTotal = Math.floor(diff / (1000 * 60 * 60 * 24));

        const years = Math.floor(daysTotal / 365);
        const months = Math.floor((daysTotal % 365) / 30);
        const days = (daysTotal % 365) % 30;

        document.getElementById("years").textContent = String(years).padStart(2, "0");
        document.getElementById("months").textContent = String(months).padStart(2, "0");
        document.getElementById("days").textContent = String(days).padStart(2, "0");
        document.getElementById("hours").textContent = String(hours).padStart(2, "0");
        document.getElementById("minutes").textContent = String(minutes).padStart(2, "0");
        document.getElementById("seconds").textContent = String(seconds).padStart(2, "0");
    }

    function updatePeople() {
        document.getElementById("adenAge").textContent = `Age: ${calculateAge(adenBirth)}`;
        document.getElementById("paisleyAge").textContent = `Age: ${calculateAge(paisleyBirth)}`;

        document.getElementById("adenCountdown").textContent = birthdayCountdown(adenBirth);
        document.getElementById("paisleyCountdown").textContent = birthdayCountdown(paisleyBirth);
    }

    setInterval(() => {
        updateRelationship();
        updatePeople();
    }, 1000);

    function createHeart() {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.animationDuration = 8 + Math.random() * 6 + "s";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 14000);
    }

    setInterval(createHeart, 600);
</script>

</body>
